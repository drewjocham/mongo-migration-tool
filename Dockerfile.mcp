# syntax=docker/dockerfile:1.4

##
## Stage 1: Build your Go binary
##
FROM golang:1.25-alpine AS builder

RUN apk --no-cache add git
WORKDIR /app

# Use go.mod / go.sum for caching
COPY go.mod go.sum ./
RUN go mod download

# Copy the rest of the source
COPY . .

# Build the main CLI
RUN CGO_ENABLED=0 GOOS=linux go build -v -o /app/mongo-migration github.com/jocham/mongo-migration

##
## Stage 2: Extend the official MongoDB MCP Server image
##
FROM mongodb/mongodb-mcp-server:latest

# Make your Go binary available on PATH inside the MCP container
COPY --from=builder /app/mongo-migration /usr/local/bin/mongo-migration
