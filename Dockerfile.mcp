# syntax=docker/dockerfile:1.4

##
## Build MCP Go binary
##
FROM golang:1.25-alpine AS builder

RUN apk --no-cache add git
WORKDIR /app

# Use go.mod / go.sum for caching
COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -v -o /app/mongo-migration github.com/jocham/mongo-migration

## Extending the official MongoDB MCP Server image
FROM mongodb/mongodb-mcp-server:1.3.1

# my Go binary available on PATH inside the MCP container
COPY --from=builder /app/mongo-migration /usr/local/bin/mongo-migration
