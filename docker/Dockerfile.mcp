# syntax=docker/dockerfile:1.4
FROM golang:1.25-alpine AS builder

RUN apk --no-cache add git
WORKDIR /app

COPY go.mod go.sum ./
RUN --mount=type=cache,target=/go/pkg/mod \
    go mod download

COPY internal/ internal/
COPY migration/ migration/
COPY migrations/ migrations/

ARG VERSION=dev
ARG COMMIT=unknown
ARG DATE=unknown

RUN --mount=type=cache,target=/root/.cache/go-build \
    --mount=type=cache,target=/go/pkg/mod \
    CGO_ENABLED=0 GOOS=linux go build -v \
    -ldflags="-s -w \
        -X github.com/drewjocham/mongo-migration-tool/internal/cli.appVersion=${VERSION} \
        -X github.com/drewjocham/mongo-migration-tool/internal/cli.commit=${COMMIT} \
        -X github.com/drewjocham/mongo-migration-tool/internal/cli.date=${DATE}" \
    -o /app/mongo-migration ./migration/cmd

FROM mongodb/mongodb-mcp-server:1.3.1

USER root
WORKDIR /app

COPY --from=builder /app/mongo-migration /app/mongo-migration
RUN chmod +x /app/mongo-migration && \
    ln -s /app/mongo-migration /usr/local/bin/mongo-migration


ENTRYPOINT ["/app/mongo-migration", "mcp"]
